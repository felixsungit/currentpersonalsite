$(window).ready(function() {
	
	$(".more-info-btn").click(function(e){
		e.preventDefault();
		$(this).prev().slideToggle("fast");
		$(this).toggleClass("rotate");
	});
	$("#burger-menu").hide();
	$("#hamburger-btn").click(function(e){
		
		e.preventDefault();
		$("#burger-menu").slideToggle("fast");
	});
	$("#down-arrow").click(function(e){
		e.preventDefault();
		var winWidth = $(window).width();
		if (winWidth >= 768){
			$('html, body').animate({
			  scrollTop: $("#about").offset().top - 55
			}, 500);
		}else{
			$('html, body').animate({
			  scrollTop: $("#about").offset().top
			}, 500);
		}
	});
	$(".my-site-up").click(function(e){
