	$(document).scroll(function() {
		leftSlideIn();
		changeBg();
		headerdown();
		changeburger();
	});
	$( window ).resize(function() {
		leftSlideIn();
		changeBg();
		retactmenu();
		changeburger();
	});
	function leftSlideIn(){
		var positon = $(window).scrollTop();
		var winWidth = $(window).width();
		if (winWidth >= 992){
			if (positon >= ( $("#main-overlay ").height() - 200 )){

				$("#left-side").show();
			}else{
				$("#left-side").fadeOut(300);
			}
		}else{
			$("#left-side").fadeOut(300);
		}
	}
	function headerdown(){
		var scroll = $(window).scrollTop();
    if (scroll > 30){
      $('#nav-cont').css("background", "#FFFFFF");
      $('.nav-item').css("color", "#2E2633");     
    }else{
      $('#nav-cont').css("background", "rgba(0,0,0,0)");
      $('.nav-item').css("color", "#FFFFFF");   
    }
	}
	function retactmenu(){
		var winWidth = $(window).width();
		if (winWidth >= 768){
			$("#burger-menu").fadeOut();
		}
	}
	function changeBg(){
		var positon = $(window).scrollTop();
		if ( positon >=  $("#timeline ").height() ) {
			$("#bridge").css("background-image","url(<%= asset_path('b3.jpg') %>)");
		}else{
			$("#bridge").css("background-image","url(<%= asset_path('bg-mars.jpg') %>)");
		}
	}
	function changeburger(){
		var positon = $(window).scrollTop();
		if ( positon >= $("#projects").offset().top ){
			$(".burger-icon").css("color", "#3498db");
		}else{
			$(".burger-icon").css("color", "#2E2633");
		}
	}
	changeBg();
	leftSlideIn();
	headerdown();
	retactmenu();
	changeburger();
	




});

